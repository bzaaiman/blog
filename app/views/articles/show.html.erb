<h1>The selected article is the following:</h1>

<p>
  <strong>Title:</strong><br>
  <%= @article.title %>
</p>

<p>
  <strong>Text:</strong><br>
  <%= @article.text %>
</p>

<h2>Comments:</h2>
<% @article.comments.each do |comment| %>
  <p>
    <strong>Commenter:</strong><br>
    <%= comment.commenter %>
  </p>
  <p>
    <%= comment.body %>
  </p>
<% end %>

<h2>Add a comment.</h2>
<%= form_for([@article, @article.comments.build])  do |c|%>
  <p>
    <%= c.label :commenter %><br>
    <%= c.text_field :commenter %> 
  </p>
  <p>
    <%= c.label :body %><br>
    <%= c.text_area :body %> 
  </p>
  <p>
    <%= c.submit %>
  </p>
<% end %>


<%= link_to 'List', articles_path %> | <%= link_to 'Edit', edit_article_path %> | <%= link_to 'Delete', article_path, method: :delete, data:{confirm: 'Are you sure?'} %>